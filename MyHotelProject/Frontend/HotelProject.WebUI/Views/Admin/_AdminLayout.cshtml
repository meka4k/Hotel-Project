
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("/Views/Admin/HeadPartial.cshtml") 

<body>


    @await Html.PartialAsync("/Views/Admin/PreloaderPartial.cshtml")

    @await Html.PartialAsync("/Views/Admin/NavHeaderPartial.cshtml")

    <div id="main-wrapper">

        @await Html.PartialAsync("/Views/Admin/HeaderPartial.cshtml")

        @await Html.PartialAsync("/Views/Admin/SidebarPartial.cshtml")


        <div class="content-body">

            <!-- row -->

            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>


        @await Html.PartialAsync("/Views/Admin/FooterPartial.cshtml")

    </div>

    @await Html.PartialAsync("/Views/Admin/ScriptPartial.cshtml")


</body>

</html>

