@model HotelProject.WebUI.Dtos.BookingDto.UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Rezervasyon Güncelleme Sayfası</h1>

<form method="post">
    <label>Adı Soyadı</label>
    <input type="hidden" asp-for="BookingId" />
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Mail</label>
    <input type="email" asp-for="Mail" class="form-control" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Giriş Tarihi</label>
    <input type="date" asp-for="CheckIn" class="form-control" />
    <br />
    <label>Çıkış Tarihi</label>
    <input type="date" asp-for="CheckOut" class="form-control" />
    <br />
    <label>Yetişkin Sayısı</label>
    <input type="text" asp-for="AdultCount" class="form-control" />
    <br />
    <label>Çocuk Sayısı</label>
    <input type="text" asp-for="ChildCount" class="form-control" />
    <br />
    <label>Özel İstek</label>
    <input type="text" asp-for="SpecialRequest" rows="5" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" rows="5" class="form-control" />
    <br />
    <label>Durum</label>
    <input type="text" asp-for="Status" readonly class="form-control" />
    <br />

    <button class="btn btn-primary">Güncelle</button>

</form>