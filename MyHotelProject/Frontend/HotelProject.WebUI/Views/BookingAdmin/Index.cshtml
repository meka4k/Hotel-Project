@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Misafir</th>
            <th>Giriş Tarihi</th>
            <th>Çıkış Tarihi</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
                {
                    count++;

        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@(((DateTime)item.CheckIn).ToString("dd-mm-yyyy"))</td>
            <td>@(((DateTime)item.CheckOut).ToString("dd-mm-yyyy"))</td>
            <td><span class="badge badge-primary px-2">@item.Status</span></td>
            <td> <a href="/BookingAdmin/ApprovedReservation/@item.BookingId" class="btn btn-outline-success">Onayla</a></td>
            <td> <a href="/BookingAdmin/CancelReservation/@item.BookingId" class="btn btn-outline-danger">İptal Et</a></td>
            <td> <a href="/BookingAdmin/WaitReservation/@item.BookingId" class="btn btn-outline-warning">Beklet</a></td>
            <td> <a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-outline-primary">Güncelle</a></td>


        </tr>
        }
    </tbody>
        
</table>

