@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Oda Numarası</th>
        <th>Oda Başlığı</th>
        <th>Fiyat</th>
        <th>Yatak Sayısı</th>
        <th>Banyo Sayısı</th>
        <th>Açıklama</th>
        <th>Kapak Fotoğrafı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.RoomId</th>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td>@item.Description</td>
            <td>@item.RoomCoverImage</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomId" class="btn btn-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-info">Yeni Oda Girişi</a>

