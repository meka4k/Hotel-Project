@model InboxContactDto
@{
    ViewData["Title"] = "MessageDetailsByContact";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="email-left-box">
                <a href="/AdminContact/SendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                @await Html.PartialAsync("SidebarContactPartial")

                <h5 class="mt-5 m-b-10">Kategoriler</h5>
                @await Html.PartialAsync("SidebarContactCategoryPartial")
            </div>
            <div class="email-right-box">
                <div role="toolbar" class="toolbar">
                    <div class="btn-group">
                        <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark" type="button">Gelen Mesajlar <span class="note-icon-caret m-1-5"></span></button>
                    </div>
                </div>
                <div class="read-content">
                    <div class="media pt-5">
                        <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
                        <div class="media-body">
                            <h5 class="m-b-3">@Model.Name</h5>
                            <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
                        </div>

                    </div>
                    <hr>
                    <div class="media mb-4 mt-1">
                        <div class="media-body">
                            <span class="float-right">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</span>
                            <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Kimden: @Model.Mail</small>
                        </div>
                    </div>
                    <p>
                        @Model.Message
                    </p>
                    <hr>
                </div>
            </div>
        </div>
    </div>


