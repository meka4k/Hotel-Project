@model List<ResultSendMessage>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="email-left-box">
                <a href="/AdminContact/SendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                @await Html.PartialAsync("SidebarContactPartial")

                <h5 class="mt-5 m-b-10">Kategoriler</h5>
                @await Html.PartialAsync("SidebarContactCategoryPartial")
            </div>
            <div class="email-right-box">
                <div role="toolbar" class="toolbar">
                    <div class="btn-group">
                        <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark" type="button">Gönderilen Mesajlar <span class="note-icon-caret m-1-5"></span></button>
                    </div>
                </div>
                <div class="email-list m-t-15">
                    @foreach (var item in Model)
                    {
                        <div class="message">
                            <a href="/AdminContact/MessageDetails/@item.SendMessageId">
                                <div class="col-mail col-mail-1">
                                    <div class="email-checkbox">
                                        <input type="checkbox" id="chk2">
                                        <label class="toggle" for="chk2"></label>
                                    </div><span class="star-toggle ti-star"></span>
                                </div>
                                <div class="col-mail col-mail-2">
                                    <div class="subject"><b>Alıcı:  </b>@item.RecieverName <b>Konu:  </b>@item.Title <b>--></b> @item.Content</div>
                                    <div class="date">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</div>
                                </div>
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
