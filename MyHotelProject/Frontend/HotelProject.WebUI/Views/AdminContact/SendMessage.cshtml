@model CreateSendMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<div class="email-left-box">
    <a href="email-compose.html" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    @await Html.PartialAsync("SidebarContactPartial")

    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarContactCategoryPartial")
</div>
<div class="email-right-box">
    <div class="toolbar" role="toolbar">
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light">
                <i class="fa fa-archive"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa fa-exclamation-circle"></i>
            </button>
            <button type="button" class="btn btn-light">
                <i class="fa fa-trash"></i>
            </button>
        </div>
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
            </button>
            <div class="dropdown-menu">
                <span class="dropdown-header">Move to</span>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>  <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>
                <a class="dropdown-item" href="javascript: void(0);">Forum</a>
            </div>
        </div>
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
            </button>
            <div class="dropdown-menu">
                <span class="dropdown-header">Label as:</span>  <a class="dropdown-item" href="javascript: void(0);">Güncellemeler</a>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyonlar</a>
                <a class="dropdown-item" href="javascript: void(0);">Forum</a>
            </div>
        </div>
        <div class="btn-group m-b-20">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                Daha <span class="caret m-l-5"></span>
            </button>
            <div class="dropdown-menu">
                <span class="dropdown-header">More Option :</span>  <a class="dropdown-item" href="javascript: void(0);">Okunmamış Olarak İşaretle</a>  <a class="dropdown-item" href="javascript: void(0);">Taslağa Ekle</a>  <a class="dropdown-item" href="javascript: void(0);">Favorilere Ekle</a>  <a class="dropdown-item" href="javascript: void(0);">Sessize Al</a>
            </div>
        </div>
    </div>
    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="RecieverName" placeholder=" Alıcı Adı">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="RecieverMail" placeholder=" Alıcı Maili">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="Title" placeholder="Başlık">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" rows="15" asp-for="Content" placeholder="Mesajınızı giriniz."></textarea>
            </div>
            <div class="text-left m-t-15">
                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
            </div>
        </form>
    </div>
    
</div>