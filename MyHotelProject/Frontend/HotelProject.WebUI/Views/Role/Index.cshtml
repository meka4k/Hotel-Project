@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>


</table>
<a href="/Role/AddRole/" class="btn btn-info">Yeni Rol Girişi</a>

