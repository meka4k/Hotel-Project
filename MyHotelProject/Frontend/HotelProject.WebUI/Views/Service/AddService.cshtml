@model AddServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}




<form method="post">
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="btn-danger"></span>
    <label>Servis İkonu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="btn-danger"></span>
    <label>Servis Açıklaması</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="btn-danger"></span>

    <br />
    <button class="btn btn-primary">Kaydet</button>

</form>

